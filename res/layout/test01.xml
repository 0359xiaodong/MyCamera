
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:orientation="vertical" 
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/PreviewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >
    </FrameLayout>
    <RelativeLayout 
        android:layout_width="match_parent" 
        android:layout_height="0dp" 
        android:layout_weight="0.2" 
        android:background="@drawable/bgtest">
        <Button 
            android:id="@+id/BtnCapture1" 
            android:layout_width="60dp" 
            android:layout_height="60dp" 
            android:layout_centerHorizontal="true" 
            android:layout_margin="10dp"
            android:layout_centerVertical="true" 
            android:background="@drawable/take"/>
         <Button 
            android:id="@+id/BtnCapture2" 
            android:layout_width="60dp" 
            android:layout_height="60dp" 
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/BtnCapture1"
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true" 
            android:background="@drawable/video"/>
        <Button 
            android:id="@+id/Decorate" 
            android:layout_width="60dp" 
            android:layout_height="60dp" 
            android:layout_toLeftOf="@id/BtnCapture2"
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true" 
            android:background="@drawable/dec"/>
         <Button 
            android:id="@+id/BtnCapture4" 
            android:layout_width="60dp" 
            android:layout_height="60dp" 
            
             android:layout_toRightOf="@id/BtnCapture1"
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true" 
            android:background="@drawable/flash"/>
        <ImageView
            android:id="@+id/ThumbsView" 
            android:layout_width="60dp" 
            android:layout_height="60dp" 
            
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" 
            android:layout_margin="15dp" 
            android:background="@drawable/pic"
            android:contentDescription="@string/Description"/>
     
	
	</RelativeLayout ></LinearLayout>